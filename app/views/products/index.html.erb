<h1>Products#index</h1>
<p>
  <%= link_to 'Add a product', new_product_path %>
</p>

<% @products.each do |product| %>
  <ul>
    <li><%= product.title %></li>
    <li><%= product.description %></li>
    <% if product.image_url? %><li><%= product.image_url %></li><% end %>
    <li><%= product.price %></li>
    <li><%= link_to 'Edit', edit_product_path(product) %></li>
  </ul>
<% end %>
