<h1>Please enter your details</h1>

<%= form_for @order do |f| %>
  <% if @order.errors.any? %>
    <%= pluralize(@order.errors.count, 'error') %>
    <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address, rows: 3, cols: 4 %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :pay_type %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: 'Select a payment method' %>
  </p>
  <p>
    <%= f.submit 'Place order' %>
  </p>
<% end %>
